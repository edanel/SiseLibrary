<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/them_blackground"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/bar_search_show_bg"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/bar_title_color" >

        <ImageView
            android:id="@+id/bar_show_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_icon_normal"
            android:contentDescription="返回上一页"
            android:onClick="back" />

        <TextView
            android:id="@+id/bar_search_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="搜索结果"
            android:textColor="@android:color/white"
            android:textSize="20.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/search_show_sum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/search_show_sum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/search_show_sum"
            android:text="共搜索到："
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/search_show_sum_tv2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/search_show_sum"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_show_listview_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/search_show_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/white"
            android:divider="@color/them_blackground"
            android:dividerHeight="2.0dp"
            android:fadingEdge="none"
            android:listSelector="@android:color/transparent"
            android:scrollingCache="false" >
        </ListView>
    </LinearLayout>

</LinearLayout>