<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
        android:background="@drawable/listview_press" 
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/news_list_all_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3.0dp"
        android:layout_marginLeft="5.0dp"
        android:layout_marginRight="5.0dp"
        android:layout_marginTop="3.0dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/news_list_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2.0dp"
                android:layout_marginLeft="4.0dp"
                android:layout_marginTop="2.0dp"
                android:singleLine="true"
                android:text="暂无数据"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="3.0dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/news_list_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2.0dp"
                android:layout_marginLeft="4.0dp"
                android:singleLine="true"
                android:text="暂无数据"
                android:gravity="right"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>