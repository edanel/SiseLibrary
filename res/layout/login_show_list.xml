<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_press" >

    <LinearLayout
        android:id="@+id/login_show_list_all_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dp"
        android:layout_marginRight="5.0dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/login_show_list_bookname"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2.0dp"
                android:layout_marginLeft="4.0dp"
                android:layout_marginTop="2.0dp"
                android:layout_weight="2.0"
                android:gravity="center"
                android:text="书名"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/login_show_more_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/button"
                    android:paddingBottom="8.0dp"
                    android:paddingLeft="5.0dp"
                    android:paddingRight="5.0dp"
                    android:paddingTop="8.0dp"
                    android:text="详  细"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="1.0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5.0dp"
                    android:background="@color/line_biack" />

                <Button
                    android:id="@+id/login_show_borrow_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/button"
                    android:paddingBottom="8.0dp"
                    android:paddingLeft="5.0dp"
                    android:paddingRight="5.0dp"
                    android:paddingTop="8.0dp"
                    android:text="续  借"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>