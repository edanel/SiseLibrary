<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_press" >

    <LinearLayout
        android:id="@+id/search_show_list_all_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dp"
        android:layout_marginRight="5.0dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/search_show_list_ig_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/search_show_list_ig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.0dp"
                android:layout_marginTop="2.0dp"
                android:background="@drawable/cover_default" />
        </LinearLayout>

        <TextView
            android:layout_width="1.0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2.0dp"
            android:background="@color/them_blackground" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/search_show_list_ig_layout"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/search_show_list_bookname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.0dp"
                android:layout_marginLeft="4.0dp"
                android:layout_marginTop="2.0dp"
                android:text="书名"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/search_show_list_place"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="4.0dp"
                android:layout_marginTop="3.0dp"
                android:text="place"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>